<?xml version="1.0" encoding="utf-8"?>
<Lights>
    <!-- For sun use Light->Type->type 1, for point - 2, for spot - 3. -->
    <Light name ="lamp">
        <Type type="2"/>
        <Falloff falloff="LIGHT_FALLOFF_DISABLED"/>
        <Color r = "1.0" g = "1.0" b = "1.0" a = "1.0"/>
        <Position x="0.0" y ="30.0" z="0.0"/>
        <Direction x = "0.0" y = "-1.0" z = "0.5"/>
        <Radius r="100.0"/>
        <Angle a="45.0"/>
    </Light>
    <Light name="sun light">
        <Type type="1"/>
        <Falloff falloff="LIGHT_FALLOFF_DISABLED"/>
        <Color r = "0.9" g = "0.9" b = "0.9" a = "1.0"/>
        <Position x="0.0" y ="0.0" z="0.0"/>
        <Direction x = "0.1" y = "-1.0" z = "0.0"/>
        <Radius r="100.0"/>
        <Angle a="45.0"/>
    </Light>
    <Light name="candle">
        <Type type="2"/>
        <Falloff falloff="LIGHT_FALLOFF_DISABLED"/>
        <Color r = "1.0" g = "1.0" b = "1.0" a = "1.0"/>
        <Position x="0.0" y ="1.0" z="0.0"/>
        <Direction x = "1.0" y = "1.0" z = "1.0"/>
        <Radius r="100.0"/>
        <Angle a="45.0"/>
    </Light>
</Lights>